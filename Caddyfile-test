# Test Caddyfile without Cloudflare DNS integration
# Used for testing when no CLOUDFLARE_API_TOKEN is provided
{
    # Global options
    admin localhost:2019
    
    # Email for ACME account (testing only)
    email test@example.com
    
    # Skip certificate verification for internal testing
    skip_install_trust
    
    # Disable automatic HTTPS for testing
    auto_https off
    
    log {
        output stdout
        format console
    }
}

# Health check endpoint and static files on HTTP
:80 {
    # Health check endpoint
    respond /health "OK" 200
    
    # Serve static files
    root * /usr/share/caddy
    file_server
    
    # Add some basic headers for testing
    header {
        X-Test-Mode "true"
        X-Content-Type-Options "nosniff"
    }
}

# HTTPS endpoint with self-signed certificates for testing
localhost:443 {
    # Serve static files from /usr/share/caddy
    root * /usr/share/caddy
    file_server
    
    # Logging
    log {
        output stdout
        format console
    }
    
    # Security headers for testing
    header {
        X-Test-Mode "true"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
    }
    
    # Use self-signed certificates for localhost
    tls internal
}
