# Cloudflare Configuration for Caddy
# Copy this file to .env and fill in your values

# Your Cloudflare API Token (required)
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Permissions needed: Zone:Zone:Read, Zone:DNS:Edit
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# Your domain name (required for SSL certificates)
# Example: DOMAIN=example.com
DOMAIN=localhost

# Email for ACME account registration
# This is used by Let's Encrypt for notifications
CADDY_ACME_EMAIL=admin@example.com

# Container Registry (GitHub Container Registry)
REGISTRY_IMAGE=ghcr.io/pocketcalculator/caddy-cf:latest

# Optional: Uncomment to enable debug logging
# CADDY_DEBUG=true
